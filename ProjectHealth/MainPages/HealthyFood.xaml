            </Grid>

            <Grid Canvas.Left="603" Canvas.Top="276" Height="77" Width="79">
                <Button Style="{StaticResource FoodButton2}" Canvas.Left="42" Canvas.Top="1" >
                    <Button.RenderTransform>
                        <ScaleTransform ScaleX="0.16" ScaleY="0.16"></ScaleTransform>
                    </Button.RenderTransform>
                </Button>
            </Grid>
